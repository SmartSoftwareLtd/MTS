         title: "Confirmation",
         width: 350,
         height: 160,
         buttons: [
     {
         id: "Yes",
         text: "Yes",
         click: function () {
             debugger

             $.ajax({
                 contentType: 'application/json; charset=utf-8',
                 dataType: 'json',
                 type: 'POST',
                 url: "/DO/DeleteDO",
                 data: JSON.stringify({ ID: rowId }),
                 success: function (data) {
                     alert("Succsesfully deleted delivery ordered.");
                     window.location.href = "/DO/DOList";
                 }
             });
             //}



             $(this).dialog('close');
         }

     },
     {
         id: "No",
         text: "No",
         click: function () {
             $(this).dialog('close');
         }
     }
         ]
     });
 }
 
